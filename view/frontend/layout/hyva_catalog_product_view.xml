<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
		<referenceBlock name="product.info.addtocart">
            <block class="Magento\Catalog\Block\Product\View" template="Esparksinc_IvyPaymentHyvaCompatibility::catalog/ivyexpress-button.phtml" name="ivy.checkout.button" ifconfig="payment/ivy/active" before="product.info.addtocart.instantPurchase">
				<arguments>
					<argument name="banner_data" xsi:type="object">Esparksinc\IvyPayment\ViewModel\Banner</argument>
				</arguments>
			</block>
        </referenceBlock>
        <referenceBlock name="product.info.addtocart.additional">
            <block class="Magento\Catalog\Block\Product\View" template="Esparksinc_IvyPaymentHyvaCompatibility::catalog/ivyexpress-button.phtml" name="ivy.checkout.button.additional" ifconfig="payment/ivy/active" before="product.info.addtocart.instantPurchase.additional">
				<arguments>
					<argument name="banner_data" xsi:type="object">Esparksinc\IvyPayment\ViewModel\Banner</argument>
				</arguments>
			</block>
        </referenceBlock>
	</body>
</page>
